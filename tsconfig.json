{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "outDir": "lib",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": [
    "src"
  ],
  "compileOnSave": true
}
